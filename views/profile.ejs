      <div class="cardWrapper w-50 ps-5">
        <h2 class="w-100">View Events</h2>
       
        <% for(var i=0; i<events.length; i++) {%>
          <div class="card me-5 mt-3" style="width: 15.5rem; height: auto;">
            <div class="card-body">
              <h5 id="eventName" class="card-title"><%= events[i].eventName %></h5>
              <hr class="w-100">
              <h6 class="card-subtitle mb-2 text-body-secondary fw-bold"><%= events[i].yourName %></h6>
              <p class="card-text"><%= events[i].eventDesc %></p>
              <p class="fw-bold"><%= events[i].month %> <%= events[i].day %>, <%= events[i].year %></p>
              <span id="trash" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                <span><i class="fa fa-trash fs-5" aria-hidden="true"></i></span>
              </span>
              <span id="edit" class="trash position-absolute top-0 start-100 translate-middle badge rounded-pill bg-warning">
                <span><i class="trash fa fa-star fs-5" aria-hidden="true"></i></span>
              </span>
              <span id="complete" class="trash position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success">
                <span><i class="trash fa fa-check fs-5" aria-hidden="true"></i></span>
              </span>
            </div>
          </div>
        <% } %>
     
      </div>
      


    </div>
