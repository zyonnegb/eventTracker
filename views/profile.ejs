<body>
<div class="container w-100">

    <div class="page-header text-center w-100">
        <h1><i class="fa fa-calendar fs-2"></i> Event Page</h1>
        <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>
    <hr>
    <div class="sections mt-3">
      <div class="leftSide row w-50">
          <div class="col-sm-6 w-100">
            <h2>Add Event</h2>
            <form action="/event" method="post">
              <div class="input-group w-100 mt-3">
                <span class="input-group-text" id="basic-addon3">Your Name</span>
                <input name="yourName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4">
              </div>
              <div class="input-group w-100 mt-3">
                <span class="input-group-text" id="basic-addon3">Event Name</span>
                <input name="eventName" type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3 basic-addon4">
              </div>
              <div class="input-group w-100 mt-3">
                <span class="input-group-text">Event Description</span>
                <textarea name="eventDesc" class="form-control" aria-label="With textarea"></textarea>
              </div>
              <div class="input-group mt-3">
                <span class="input-group-text">Month</span>
                <input name="month" type="number" aria-label="First name" class="form-control">
                <span class="input-group-text">Day</span>
                <input name="day" type="number" aria-label="Last name" class="form-control">
                <span class="input-group-text">Year</span>
                <input name="year" type="number" aria-label="Last name" class="form-control">
              </div>
              <button type="submit" class="btn btn-outline-secondary w-100 mt-3">Add Event</button>
            </form>
          </div>
      </div>



